<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1 seconds">
    <contextName>springbootjunit</contextName>
    <property name="log.path" value="logback.log" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="debug">
        <appender-ref ref="console" />
    </root>

    <logger name="org.springframework" additivity="true" level="info" />
    <logger name="org.mybatis" additivity="true" level="debug"/>
    <logger name="org.apache.ibatis" additivity="true" level="debug"/>
    <logger name="com.example" additivity="true" level="debug"/>
</configuration>